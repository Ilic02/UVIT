<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Zadatak 3</title>
    <link rel="stylesheet" href="/1.css">
    <link rel="stylesheet" href="/bootstrap.css">
</head>
<body>
    <h1>Dnevnik citanja</h1>
    <div class="container text-center">
  <div class="row">
    <div class="col">
        <%for(let d of data){%>
      <form action="/knjiga" method="get">
        <table>
        <tr>
            <td>Naslov</td>
            <td class="bold"><%=d.title%></td>
        </tr>
        <tr>
            <td>Pisac</td>
            <td class="bold"><%=d.author%></td>
        </tr>
        <tr>
            <td>Godina izdanja</td>
            <td class="bold"><%=d.year%></td>
        </tr>
        <tr>
            <td>Broj strana</td>
            <td class="bold"><%=d.pages%></td>
        </tr>
        <tr>
            <td>Procitano</td>
            <td class="bold"><%=d.read?"Da":"Ne"%></td>
        </tr>
        <tr>
            <td>Link</td>
            <td><button  class="btn btn-success">Informacije</button></td>
        </tr>
      </table>
      <input type="text" name="id" value="<%=d._id%>" hidden>
      </form>
      <%}%>
    </div>
    <div class="col">
      <h2>Unesi novu knjigu</h2>
      <form action="/novaKnjiga" method="post">
        <label for="">Naslov</label><br>
        <div class="input-group mb-3">
            <input type="text" name="title" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <label for="">Pisac</label><br>
        <div class="input-group mb-3">
            <input type="text" name="author" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <label for="">Godina izdanja</label><br>
        <div class="input-group mb-3">
            <input type="text" name="year" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <label for="">Broj strana</label><br>
        <div class="input-group mb-3">
            <input type="text" name="pages" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
        </div>
        <button class="btn btn-primary">Primary</button>
      </form>
    </div>
  </div>
</div>
</body>
</html>