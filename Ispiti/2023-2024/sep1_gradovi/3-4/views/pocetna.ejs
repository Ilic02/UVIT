        <form><button >The Food</button></form>
    </div>
    <div class="col-6">
      <h2 style="text-align: left; font-weight: bold;">The Flight</h2>
      <form action="/letovi" method="post">
        <label>From</label>
        <input type="text" name="from" placeholder="City or Airport">
        <label>To</label>
        <input type="text" name="to" placeholder="City or Airport">
        <br>
        <label>Depart</label>
        <input type="date" name="depart">
        <label>Return</label>
        <input type="date" name="ret">
        <br>
        <label>Adults 12+</label>
        <select name="adults">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
        </select>
        <label>Children 2-12</label>
        <select name="children">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
        </select>
        <label>Infants less than 2</label>
        <select name="infants">
            <option value="0">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
        </select>
        <br>
        <label>Cabin</label>
        <select name="cabin">
            <option value="Economy">Economy</option>
            <option value="Bussiness">Bussiness</option>
            <option value="First">First</option>
        </select>
        <input type="checkbox" name="direct"> Direct Flights
        <button>Search Flights</button>
      </form>
    </div>
    <div class="col" id="div3">
      <h2>What?</h2>
      <p>Plan your flight.</p>
      <h2>Where?</h2>
      <p>Wherever you want.</p>
      <h2>How?</h2>
      <p>Using our page.</p>
    </div>
  </div>
